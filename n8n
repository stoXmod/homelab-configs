version: '3.8'

services:
  n8n:
    image: docker.n8n.io/n8nio/n8n
    container_name: n8n
    restart: unless-stopped
    ports:
      - "5678:5678"
    environment:
      - GENERIC_TIMEZONE=Asia/Colombo
      - TZ=Asia/Colombo
      # Optional: Set a basic auth password
      # - N8N_BASIC_AUTH_ACTIVE=true
      # - N8N_BASIC_AUTH_USER=admin
      # - N8N_BASIC_AUTH_PASSWORD=your-password-here
      # Optional: Set webhook URL if using with domain
      # - WEBHOOK_URL=https://n8n.rb.nishara.me/
    volumes:
      - n8n_data:/home/node/.n8n

volumes:
  n8n_data:
    driver: local
